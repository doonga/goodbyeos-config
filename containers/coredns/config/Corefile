(common) {
  errors
  log . {
    class error
  }
  reload
  loadbalance
  cache
  loop
  local

  prometheus :9153

  health {
    lameduck 5s
  }
}

(k8s_gateway) {
  forward . 10.45.0.3:53
}

# Hack to prevent the gateway returning 127.0.0.1 from /etc/hosts
gateway.private.greyrock.io {
  import common
  template IN A gateway.private.greyrock.io {
    answer "{{ .Name }} 60 IN A 10.1.0.1"
  }
}

greyrock.tech {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
    fallthrough
  }
  import k8s_gateway
}

. {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}

